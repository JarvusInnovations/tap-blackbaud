                "<node_internals>/**"
            ],
            "program": "${workspaceRoot:tap-blackbaud-school}/bin/tap-blackbaud-school.js",
            "args": [
                "--config", "${workspaceRoot:tap-blackbaud-school}/.scratch/config.json",
